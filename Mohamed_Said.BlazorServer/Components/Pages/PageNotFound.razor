@page "/NotFound"
@layout NoLayout


<PageTitle>404 - Page Not Found</PageTitle>

<div class="bg-light-primary text-light-primary min-h-screen">
    <!-- Main content -->
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="text-center max-w-2xl mx-auto">
            <!-- 404 Number -->
            <div class="mb-8">
                <h1 class="text-9xl md:text-[12rem] font-bold gradient-404-text animate-float select-none">
                    404
                </h1>
            </div>

            <!-- Error Icon -->
            <div class="mb-8 flex justify-center">
                <div class="w-24 h-24 bg-light-secondary rounded-full flex items-center justify-center shadow-lg animate-pulse-slow">
                    <svg class="w-12 h-12 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                </div>
            </div>

            <!-- Main heading -->
            <h2 class="text-4xl md:text-5xl font-bold text-light-primary mb-4">
                Oops! Page Not Found
            </h2>

            <!-- Description -->
            <p class="text-xl text-light-text-secondary mb-8 leading-relaxed">
                The page you're looking for seems to have wandered off into the digital void. 
                Don't worry, it happens to the best of us!
            </p>

            <!-- Action button -->
            <div class="flex justify-center items-center">
                <a href="/" class="bg-brand-blue text-white px-8 py-3 rounded-lg font-semibold hover:opacity-90 transition-all duration-200 transform hover:scale-105 shadow-lg inline-block">
                    Take Me Home
                </a>
            </div>

            <!-- Additional help -->
            <div class="mt-12 p-6 bg-light-secondary rounded-xl shadow-md">
                <h3 class="text-lg font-semibold text-light-primary mb-3">Need Help?</h3>
                <p class="text-light-text-secondary mb-4">Here are some things you can try:</p>
                <ul class="text-sm text-light-text-secondary space-y-2">
                    <li class="flex items-center justify-center sm:justify-start">
                        <span class="w-2 h-2 bg-brand-green rounded-full mr-3"></span>
                        Check the URL for typos
                    </li>
                    <li class="flex items-center justify-center sm:justify-start">
                        <span class="w-2 h-2 bg-brand-green rounded-full mr-3"></span>
                        Use the navigation menu to find what you need
                    </li>
                    <li class="flex items-center justify-center sm:justify-start">
                        <span class="w-2 h-2 bg-brand-green rounded-full mr-3"></span>
                        Contact Me if the problem persists
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

