                </svg>
                </a>

                <!-- LinkedIn -->
                <a href="https://linkedin.com/in/yourusername"
                target="_blank"
                rel="noopener noreferrer"
                class="text-light-text-secondary dark:text-dark-text-secondary
                hover:text-[#0A66C2] dark:hover:text-[#0A66C2]
                transition-colors duration-300">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
                </a>

                <!-- WhatsApp -->
                <a href="https://wa.me/1234567890"
                target="_blank"
                rel="noopener noreferrer"
                class="text-light-text-secondary dark:text-dark-text-secondary
                hover:text-[#25D366] dark:hover:text-[#25D366]
                transition-colors duration-300">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                </svg>
                </a>

                <!-- Email -->
                <a href="mailto:your.email@example.com"
                class="text-light-text-secondary dark:text-dark-text-secondary
                hover:text-[#EA4335] dark:hover:text-[#EA4335]
                transition-colors duration-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                </a> *@
                </div>

            }
           
            <!-- Middle Column: Action Buttons -->
            <div class="flex-1 flex justify-center items-center gap-4 flex-wrap">
                <!-- Blog Button -->
                @* <a href="blog.html"
                   class="px-4 py-1.5 rounded-full text-sm
                          bg-gradient-to-r from-brand-blue to-brand-green
                          text-white font-medium
                          hover:shadow-[0_2px_8px_rgba(59,130,246,0.25)]
                          transform hover:-translate-y-0.5
                          transition-all duration-300
                          flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H14" />
                    </svg>
                    Blog
                </a> *@

                <!-- Resume Button -->
                <a href="@(AdminDto?.ResumeUrl)"
                   target="_blank"
                   class="px-4 py-1.5 rounded-full text-sm
                          bg-white dark:bg-dark-secondary
                          text-light-text-primary dark:text-dark-text-primary
                          border border-gray-200 dark:border-gray-700
                          hover:border-brand-blue dark:hover:border-brand-blue
                          hover:shadow-[0_2px_8px_rgba(59,130,246,0.1)]
                          transform hover:-translate-y-0.5
                          transition-all duration-300
                          flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Resume
                </a>
            </div>

            <!-- Right Column: Copyright -->
            <div class="flex-1 text-sm text-light-text-secondary dark:text-dark-text-secondary text-center xl:text-right whitespace-nowrap transition-colors duration-300">
                <p class="flex items-center justify-center md:justify-end gap-1.5 flex-wrap lg:flex-nowrap">
                    <span>©</span>
                    <span>@(DateTime.Now.ToString("yyyy"))</span>
                    <span class="w-1 h-1 rounded-full bg-current"></span>
                    <span>Developed by</span>
                    <a href="https://github.com/yourusername"
                       target="_blank"
                       class="text-brand-blue hover:text-brand-blue/80 font-medium transition-colors duration-300">
                        @(AdminDto?.Name ?? "Mohamed Said")
                    </a>
                    <span class="w-1 h-1 rounded-full bg-current"></span>
                    <span class="text-xs">
                        with <span class="text-brand-green">AI</span> assistance
                    </span>
                </p>
            </div>
        </div>
    </div>
</footer>


@code {
    [Parameter]
    public AdminDto? AdminDto { get; set; } = new AdminDto();

    [Parameter]
    public IEnumerable<ContactIconDto>? ContactIconDtos { get; set; } = new List<ContactIconDto>();
}
