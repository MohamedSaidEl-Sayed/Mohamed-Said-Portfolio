

<!-- Education & Experience Section -->
<section id="experiences" class="py-20 bg-light-primary dark:bg-dark-secondary transition-colors duration-300">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 gradient-text">
            Education & Experience
        </h2>

        <!-- Timeline Container -->
        <div class="max-w-4xl mx-auto relative">
            <!-- Timeline Line -->
            <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-gradient-to-b
                        from-brand-blue to-brand-green"></div>

            <!-- Timeline Items Container -->
            <div class="space-y-12">
               
                @if (Experiences is not null && Experiences.Any())
                {
                    foreach (ExperienceDto experience in Experiences)
                    {
                        <ExperienceCard Experience="experience" />
                    }
                }

                <EducationCard/>

            </div>
        </div>
    </div>
</section>

@code {

    [Parameter]
    public IEnumerable<ExperienceDto>? Experiences { get; set; }

}
