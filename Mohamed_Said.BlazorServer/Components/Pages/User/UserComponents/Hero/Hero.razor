@if(AdminDto is not null)
{
    <!-- Hero Section -->
    <header id="home" class="min-h-screen flex items-center pt-20 pb-4 bg-light-primary dark:bg-dark-secondary text-light-text-primary dark:text-dark-text-primary transition-colors duration-300">
        <div class="container mx-auto px-4 space-y-reverse space-y-10 flex items-center flex-col-reverse md:flex-row md:space-y-0">
            <div class="flex items-center flex-col text-center md:text-left md:block">
                <h1 class="text-4xl font-bold mb-4 md:text-5xl">
                    Hi, I'm <span class="gradient-text">@(AdminDto.Name ?? "Mohamed Said")</span>
                </h1>
                <p class="text-lg text-light-text-secondary dark:text-dark-text-secondary mb-5 md:text-xl transition-colors duration-300">
                    @(AdminDto.Title ?? "Full Stack .NET Developer | Blazor Specialist")
                </p>
                <!-- Brief Introduction -->
                <p class="text-sm mb-5 md:text-base text-light-text-secondary dark:text-dark-text-secondary max-w-2xl leading-relaxed transition-colors duration-300">
                    @(AdminDto.Summary ?? "Passionate developer with 5+ years of experience crafting robust web applications. Specializing in .NET ecosystem and modern web technologies. Focused on delivering scalable, efficient solutions that drive business growth.")
                </p>
                @if(ContactIconDtos is not null && ContactIconDtos.Any())
                {
                    <!-- Social Links -->
                    <div class="pt-3 mb-5 border-t border-gray-200 dark:border-gray-700 transition-colors duration-300">
                        <div class="flex items-center gap-4 justify-center flex-wrap md:justify-start">
                            @foreach(ContactIconDto contactIconDto in ContactIconDtos)
                            {
                                <a href="@contactIconDto?.Url"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="group flex items-center gap-2 
                                            @(contactIconDto?.TextLightColor) dark:@(contactIconDto?.TextDarkColor)
                                            hover:@(contactIconDto?.HoverTextLightColor) 
                                            dark:hover:@(contactIconDto?.HoverTextDarkColor) 
                                            transition-colors duration-300">
                                    @((MarkupString)(contactIconDto?.IconSvg??""))
                                    <span class="text-sm font-medium hidden md:block group-hover:underline">
                                        @(contactIconDto?.Name)
                                    </span>
                                </a>
                            }
                            

                            @* <!-- WhatsApp -->
                            <a href="https://wa.me/1234567890"
                               target="_blank"
                               rel="noopener noreferrer"
                               class="group flex items-center gap-2 text-light-text-secondary dark:text-dark-text-secondary
                            hover:text-[#25D366] dark:hover:text-[#25D366] transition-colors duration-300">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
