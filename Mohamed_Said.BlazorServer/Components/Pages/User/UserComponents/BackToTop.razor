@inject IJSRuntime JSRuntime;

<!-- Back to Top Button -->
<!-- Add this just before closing body tag -->
<button id="backToTop"
        class="fixed bottom-6 right-6 z-50
           p-3 rounded-full
           bg-brand-blue/90 hover:bg-brand-blue
           shadow-lg hover:shadow-xl
           transform translate-y-20 opacity-0 invisible
           transition-all duration-300
           focus:outline-none focus:ring-2 focus:ring-brand-blue/50">
    <svg class="w-6 h-6 text-white transform rotate-180"
         fill="none"
         viewBox="0 0 24 24"
         stroke="currentColor">
        <path stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M19 14l-7 7m0 0l-7-7m7 7V3">
        </path>
    </svg>
</button>


@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("backToTop");
        }
    }
}
