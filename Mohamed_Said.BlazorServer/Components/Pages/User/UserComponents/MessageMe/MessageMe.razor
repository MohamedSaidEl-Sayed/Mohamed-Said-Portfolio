<!-- Contact Section -->
<section id="contact"
         class="py-20
               bg-light-secondary dark:bg-dark-primary
               text-light-text-primary dark:text-dark-text-primary
               transition-colors duration-300">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 gradient-text">
            Message Me
        </h2>
        <div class="max-w-lg mx-auto">
            <form class="space-y-6">
                <input type="text"
                       placeholder="Your Name"
                       class="w-full px-4 py-3
                               bg-light-primary dark:bg-dark-secondary
                               border border-gray-300 dark:border-gray-700
                               rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-blue" />
                <input type="email"
                       placeholder="Your Email"
                       class="w-full px-4 py-3
                        bg-light-primary dark:bg-dark-secondary
                        border border-gray-300 dark:border-gray-700
                        rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-blue" />
                <textarea placeholder="Your Message"
                          rows="5"
                          class="w-full px-4 py-3
                               bg-light-primary dark:bg-dark-secondary
                               border border-gray-300 dark:border-gray-700
                               rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-blue"></textarea>
                <button type="submit"
                        class="w-full bg-brand-blue text-white py-3 rounded-lg hover:bg-brand-blue/90 transition">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</section>



